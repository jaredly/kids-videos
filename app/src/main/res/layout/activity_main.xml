<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">
	<Button android:id="@+id/btn_select_folder" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/select_folder" android:layout_marginBottom="16dp" android:textSize="18sp" />
	<TextView android:id="@+id/tv_current_folder" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:textSize="14sp" android:layout_marginBottom="16dp" android:visibility="gone" />
	<androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_videos" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />
	<TextView android:id="@+id/tv_no_videos" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/no_videos_found" android:textSize="16sp" android:gravity="center" android:layout_marginTop="32dp" android:visibility="gone" />
</LinearLayout>
